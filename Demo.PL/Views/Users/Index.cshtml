@model IEnumerable<UserVM>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@if (Model.Any())
{
    <h1 class="mt-3">All Users</h1>

    <div class="mt-3">
        <form class="row" asp-action="Index">
            <div class="col-8">
                <input class="form-control" type="text" placeholder="User's Email.." name="searchView" />
            </div>

            <div class="col-4">
                <input type="submit" class="btn btn-info" value="Search" />
                <input type="submit" class="btn btn-warning" value="Return All" asp-action="Index" />
            </div>
        </form>

    </div>

    <table class="table table-striped table-hover  mt-3">
        <thead class="fw-bold">
            <tr>
                <td>@Html.DisplayNameFor(u => u.Id)</td>
                <td>@Html.DisplayNameFor(u => u.FirstName)</td>
                <td>@Html.DisplayNameFor(u => u.LastName)</td>
                <td>@Html.DisplayNameFor(u => u.Email)</td>
                <td>@Html.DisplayNameFor(u => u.Roles)</td>
                
                <td>Details</td>
                <td>Update</td>
                <td>Delete</td>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in Model)
            {
                <tr>
                    <td>@user.Id</td>
                    <td>@user.FirstName</td>
                    <td>@user.LastName</td>
                    <td>@Html.DisplayFor(u => user.Email)</td>
                    <td>@string.Join("," , user.Roles)<td>
                    
                    <partial name="_ButonPartialView" model="user.Id"></partial>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="alert alert-warning mt-3">
        <h1>No Users</h1>
    </div>
}
