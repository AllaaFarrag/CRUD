@model int 

<td>
    <a asp-action="Details" asp-route-id="@Model">
        <i class="fa-solid fa-eye"></i>
    </a>
</td>

<td>
    <a asp-action="Edit" asp-route-id="@Model">
        <i class="fa-solid fa-pen-to-square"></i>
    </a>
</td>
<td>
    <a asp-action="Delete" asp-route-id="@Model">
        <i class="fa-solid fa-trash " style="color: crimson"></i>
    </a>
</td>