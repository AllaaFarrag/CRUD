@model EmployeeVM
@{
    var Departments = new SelectList(ViewBag.Department, "Id", "Name");
}

<input hidden asp-for="ImageName" />

    <div class="form-group">
        <label class="col-form-label" asp-for="Name"></label>
        <input class="form-control" asp-for="Name" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

   <div class="form-group">
       <label class="col-form-label" asp-for="Image"></label>
       <input class="form-control" asp-for="Image" />
   </div>

    <div class="form-group">
        <label class="col-form-label" asp-for="Age"></label>
        <input class="form-control" asp-for="Age" />
        <span asp-validation-for="Age" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label class="col-form-label" asp-for="Salary"></label>
        <input class="form-control" asp-for="Salary" />
        <span asp-validation-for="Salary" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label class="col-form-label" asp-for="Department"></label>
        <select class="form-control" asp-items="@Departments" asp-for="DepartmentId">
            <option value=@null>Select Department .... </option>
        </select>
        
    </div>

    <div class="form-group">
        <label class="col-form-label" asp-for="Address"></label>
        <input class="form-control" asp-for="Address" />
        <span asp-validation-for="Address" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label class="col-form-label" asp-for="Email"></label>
        <input class="form-control" asp-for="Email" />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label class="col-form-label" asp-for="Phone"></label>
        <input class="form-control" asp-for="Phone" />
        <span asp-validation-for="Phone" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label class="col-form-label" asp-for="IsAcive"></label>
        <input class="form-check " asp-for="IsAcive" />
        <span asp-validation-for="IsAcive" class="text-danger"></span>
    </div>

    <input type="submit" value="submit" class="btn btn-primary mt-3" />
    <a asp-action="Index" class="btn btn-secondary mt-3">Back To List</a>
