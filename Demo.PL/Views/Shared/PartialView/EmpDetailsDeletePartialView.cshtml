@model EmployeeVM
@{
    var Departments = new SelectList(ViewBag.Department, "Id", "Name");
}

@if (Model.ImageName is not null)
{
    <div class="form-control">
        <img src="~/Files/Images/@Model.ImageName" width="200" height="200" class="rounded mx-auto d-block" alt="Employee's Image" />
    </div>
}
<input hidden asp-for="ImageName"/>
<div class="form-group">
    <label class="col-form-label" asp-for="Name"></label>
    <input readonly class="form-control" asp-for="Name" />
</div>

<div class="form-group">
    <label class="col-form-label" asp-for="Age"></label>
    <input readonly class="form-control" asp-for="Age" />
    <span asp-validation-for="Age" class="text-danger"></span>
</div>

<div class="form-group">
    <label class="col-form-label" asp-for="Salary"></label>
    <input readonly class="form-control" asp-for="Salary" />
</div>

<div class="form-group">
    <label class="col-form-label" asp-for="Department"></label>
    <select readonly class="form-control" asp-items="@Departments" asp-for="DepartmentId">
        
    </select>

</div>

<div class="form-group">
    <label class="col-form-label" asp-for="Address"></label>
    <input readonly class="form-control" asp-for="Address" />
</div>

<div class="form-group">
    <label class="col-form-label" asp-for="Email"></label>
    <input readonly class="form-control" asp-for="Email" />
</div>

<div class="form-group">
    <label class="col-form-label" asp-for="Phone"></label>
    <input readonly class="form-control" asp-for="Phone" />
</div>

<div class="form-group">
    <label class="col-form-label" asp-for="IsAcive"></label>
    <input readonly class="form-check " asp-for="IsAcive" />
</div>
