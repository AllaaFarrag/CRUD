@model IEnumerable<RoleVM>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<a asp-action="Create" class="btn btn-success mt-1">Create New Role</a>

@if (Model.Any())
{
    <h1 class="mt-3">All Roles</h1>

    <div class="mt-3">
        <form class="row" asp-action="Index">
            <div class="col-8">
                <input class="form-control" type="text" placeholder="Role's Name.." name="searchView" />
            </div>

            <div class="col-4">
                <input type="submit" class="btn btn-info" value="Search" />
                <input type="submit" class="btn btn-warning" value="Return All" asp-action="Index" />
            </div>
        </form>

    </div>

    <table class="table table-striped table-hover  mt-3">
        <thead class="fw-bold">
            <tr>
                <td>@Html.DisplayNameFor(r => r.Id)</td>
                <td>@Html.DisplayNameFor(r => r.Name)</td>


                <td>Details</td>
                <td>Update</td>
                <td>Delete</td>
            </tr>
        </thead>
        <tbody>
            @foreach (var role in Model)
            {
                <tr>
                    <td>@role.Id</td>
                    <td>@role.Name</td>

                     <partial name="_ButonPartialView" model="role.Id"></partial>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="alert alert-warning mt-3">
        <h1>No Roles</h1>
    </div>
}
