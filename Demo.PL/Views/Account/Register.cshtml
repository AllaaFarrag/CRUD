@model RegisterVM
@{
    ViewData["Title"] = "Register";
    Layout = "~/Views/Shared/_AuthLayout.cshtml";
}


<div class="main-w3layouts wrapper rounded">
	<div class="main-agileinfo">
		<div class="agileits-top ">
			<form asp-action="Register" method="post">
				@* <div asp-validation-summary="All"></div> *@
				<input class="text" asp-for="FirstName" placeholder="First Name" required="">
				<span asp-validation-for="FirstName" class="text-danger"></span>
				<br />
				<input class="text" asp-for="LastName" placeholder="Last Name" required="">
				<span asp-validation-for="LastName" class="text-danger"></span>
				<br />
				<input class="text" asp-for="Email" placeholder="Email" required="">
				<span asp-validation-for="Email" class="text-danger"></span>
				<br />
				<input class="text" asp-for="Password" placeholder="Password" required="">
				<span asp-validation-for="Password" class="text-danger"></span>
				<br />
				<input class="text" asp-for="ConfirmPassword" placeholder="Confirm Password" required="">
				<span asp-validation-for="ConfirmPassword" class="text-danger"></span>
				<br />
				<div class="wthree-text">
					<label class="anim">
						<input asp-for="Agree" class="checkbox">
						<span>I Agree To The Terms & Conditions</span>
					</label>
					<div class="clear"> </div>
				</div>
				<input type="submit" value="SIGNUP">
			</form>
			<p>Don't have an Account? <a asp-action="Login"> Login Now!</a></p>
		</div>
	</div>
</div>

@section Validation {

	<partial name="_ValidationScriptsPartial"></partial>
}
	
