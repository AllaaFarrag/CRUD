@model ResetPasswordVM
@{
    ViewData["Title"] = "ResetPassword";
    Layout = "~/Views/Shared/_AuthLayout.cshtml";
}

<div class="main-w3layouts wrapper rounded">
	<div class="main-agileinfo">
		<div class="agileits-top ">
			<form asp-action="ResetPassword" method="post">
				@* <div asp-validation-summary="All"></div> *@

				<input class="text" asp-for="Password" placeholder="New Password" required="">
				<span asp-validation-for="Password" class="text-danger"></span>
				<br />
				<input class="text" asp-for="ConfirmPassword" placeholder="Confirm Password" required="">
				<span asp-validation-for="ConfirmPassword" class="text-danger"></span>
				<br />

				<input type="submit" value="Change Password">
			</form>
		</div>
	</div>
</div>

@section Validation {

	<partial name="_ValidationScriptsPartial"></partial>
}
