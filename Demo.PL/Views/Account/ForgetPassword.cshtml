@model ForgetPasswordVM
@{
    ViewData["Title"] = "ForgetPassword";
    Layout = "~/Views/Shared/_AuthLayout.cshtml";
}

<div class="main-w3layouts wrapper rounded">
	<div class="main-agileinfo">
		<div class="agileits-top ">
			<form asp-action="ForgetPassword" method="post">
				<div asp-validation-summary="All"></div>
				<br />
				<input class="text" asp-for="Email" placeholder="Email" required="">
				<span asp-validation-for="Email" class="text-danger"></span>
				<br />

				<input type="submit" value="Reset Password">
			</form>
			<p>Return<a asp-action="Login"> Back</a></p>


		</div>
	</div>
</div>

@section Validation {

	<partial name="_ValidationScriptsPartial"></partial>
}