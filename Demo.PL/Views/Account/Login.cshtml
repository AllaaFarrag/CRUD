@model LoginVM

@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_AuthLayout.cshtml";
}


<div class="main-w3layouts wrapper rounded">
	<div class="main-agileinfo">
		<div class="agileits-top ">
			<form asp-action="Login" method="post">
				<div asp-validation-summary="All"></div>
				<br />
				<input class="text" asp-for="Email" placeholder="Email" required="">
				<span asp-validation-for="Email" class="text-danger"></span>
				<br />
				<input class="text" asp-for="Password" placeholder="Password" required="">
				<span asp-validation-for="Password" class="text-danger"></span>
				<br />

				<div class="wthree-text">
					<label class="anim">
						<input asp-for="RememberMe" class="checkbox">
						<span>Keep me Signed in </span>
					</label>
					<div class="clear"> </div>
				</div>
				<input type="submit" value="LOGIN">
			</form>
			<p>Don't have an Account? <a asp-action="Register"> Register Now!</a></p>
			<p>Do you Forget Your Password? <a asp-action="ForgetPassword"> Forget Password!</a></p>
		</div>
	</div>
</div>

@section Validation {

	<partial name="_ValidationScriptsPartial"></partial>
}
